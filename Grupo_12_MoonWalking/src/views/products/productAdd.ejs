<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{
    title : 'Agregar producto'
}) %>

<body>

    <%- include('../partials/header') %>

    <main>
        <section class="main_agregar_producto">
        <h1 class="h1_agregar_producto">Agregar Producto</h1>
        <section class="section_agregar_producto">
        <div class="agregar_producto1">
        <form action=""  method="POST" class="">
            <div class="col-12 col-md-6 mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="price" class="form-label">Precio</label>
                <input type="number" class="form-control" id="price" name="price">
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="discount" class="form-label">Descuento</label>
                <input type="number" class="form-control" id="discount" name="discount">
            </div>
        </div>
        <div class="agregar_producto2">
            <div class="col-12 col-md-6 mb-3">
                <label for="brand" class="form-label">Marca</label>
                <input type="text" class="form-control" id="brand" name="brand">
            </div>
            <div class="col-12 col-md-6 mb-3">
                <label for="Talle" class="form-label">Talle</label>
                <input type="text" class="form-control" id="talle" name="talle">
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label for="category" class="form-label">Categoría</label>
                <select class="form-select col-12" aria-label="Default select example" id="category" name="category">
                    <option value="" selected hidden>Seleccione...</option>
                    <option value="Hombre">Hombre</option>
                    <option value="Mujer">Mujer</option>
                    <option value="Niño/a">Niño/a</option>
                    <option value="Unisex">Unisex</option>
                </div>
            </select>
                  <div class="col-12 col-md-6 mb-3">
                    <label for="section" class="form-label">Sección</label>
                    <select class="form-select" aria-label="Default select example" id="section" name="section">
                        <option value="" selected hidden>Seleccione...</option>
                        <option value="popular">Deportivo</option>
                        <option value="temporada">Urbano</option>
                      </select>
                </div>
            </div>
        </section>
            <div class="form__box form__box--flex ">
                <a href="/" class="form__button form__button--cancel">Cancelar</a>
                <button class="form__button form__button--send" type="submit">Guardar</button>
            </div> 
        </form>
    </section>
    </main>
    
   <%- include('../partials/footer') %>

</body>
</html>